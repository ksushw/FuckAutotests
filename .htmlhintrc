{
  "tagname-lowercase": true, // Требует, чтобы имена тегов HTML были написаны в нижнем регистре (например, <div>, а не <DIV>).
  "tag-pair": true,  // Проверяет, что все открывающие теги имеют закрывающие теги (например, <div>...</div>).
  "id-unique": true, // Убедись, что каждый атрибут id уникален на странице, так как дублирующиеся id могут привести к проблемам в JavaScript и CSS.
  "src-not-empty": true, // Проверяет, чтобы атрибуты src (например, в <img> и <script>) не были пустыми, что предотвращает ошибки загрузки ресурсов.
  "attr-no-duplication": true, // Запрещает дублирование одного и того же атрибута в одном теге (например, два раза указанный class="").
  "img-alt-require": true, // Требует наличие атрибута alt у <img> для обеспечения доступности и корректной работы SEO (особенно для людей с ограниченными возможностями).
  "spec-char-escape": false, // Отключаем проверку экранирования спецсимволов, чтобы PHP-код не вызывал ошибки
  "attr-value-double-quotes": false // Отключаем проверку кавычек в значений атрибутов
  }

